generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Block {
  id              Int           @id @default(autoincrement())
  number          BigInt        @unique
  hash            String        @unique
  parentHash      String
  timestamp       DateTime
  transactions    Transaction[]
  gasUsed         String
  gasLimit        String
  miner           String
  difficulty      String?
  totalDifficulty String?
  size            String
  nonce           String?
  extraData       String?
  baseFeePerGas   String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Transaction {
  id               Int      @id @default(autoincrement())
  hash             String   @unique
  blockNumber      BigInt
  block            Block    @relation(fields: [blockNumber], references: [number])
  from             String
  to               String?
  value            String
  gasPrice         String?
  gas              String
  nonce            BigInt
  transactionIndex Int
  input            String
  status           Boolean?
  timestamp        DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Address {
  id         Int      @id @default(autoincrement())
  address    String   @unique
  balance    String
  txCount    BigInt   @default(0)
  isContract Boolean  @default(false)
  bytecode   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model TokenTransfer {
  id              Int      @id @default(autoincrement())
  transactionHash String
  blockNumber     BigInt
  from            String
  to              String
  tokenAddress    String
  value           String
  timestamp       DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
